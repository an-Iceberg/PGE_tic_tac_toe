{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "debug",
      "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",

        "${workspaceFolder}\\src\\*.cpp",

        "--output",
        "${workspaceFolder}\\build\\debug\\PGE_tic_tac_toe.exe",

        "-I",
        "${workspaceFolder}\\include",

        "--optimize=0",

        "-static-libstdc++",
        "-lpthread",
        "-lsetupapi",
        "-lwinmm",
        "-luser32",
        "-lgdi32",
        "-lgdiplus",
        "-static",
        "-lopengl32",
        "-lShlwapi",
        "-ldwmapi",
        "-lstdc++fs",
        "-std=c++20",
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
