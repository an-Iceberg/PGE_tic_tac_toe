        "--output",
        "${workspaceFolder}\\build\\release\\PGE_tic_tac_toe.exe",

        "-I",
        "${workspaceFolder}\\include",

        "--optimize=3",

        "-static-libstdc++",
        "-lpthread",
        "-lsetupapi",
        "-lwinmm",
        "-luser32",
        "-lgdi32",
        "-lgdiplus",
        "-static",
        "-lopengl32",
        "-lShlwapi",
        "-ldwmapi",
        "-lstdc++fs",
        "-std=c++20",
      ],
